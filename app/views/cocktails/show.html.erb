<h1>Cocktails#show</h1>

<p>Name: <%= @cocktail.name %></p>

<h2>Ingredient Description:</h2>
<% @cocktail.ingredients.each do |ingredient| %>
  <%= ingredient.name %>
<% end %>

<h3>Doses:</h3>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
<% end %>

<%= link_to "Back to list", cocktails_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>

