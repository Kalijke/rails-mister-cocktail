<h1>Cocktails#show</h1>

<p>Name: <%= @cocktail.name %></p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h2>Ingredient Description:</h2>
<% @cocktail.ingredients.each do |ingredient| %>
  <%= ingredient.name %>
<% end %>

<h3>Doses:</h3>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= link_to "Delete", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Back to list", cocktails_path %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>





